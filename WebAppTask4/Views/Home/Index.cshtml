@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table class="table table-striped">
        <thead>
            <tr>
                <th><input type="checkbox" id="selectAll" /></th>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Last Login Time</th>
                <th>Registration Time</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td><input type="checkbox" class="userCheckbox" value="@user.Id" /></td>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.Email</td>
                    <td>@user.LastLoginTime</td>
                    <td>@user.RegistrationTime</td>
                    <td>@(user.IsActive ? "Blocked" : "Active")</td>
                </tr>
            }
        </tbody>
    </table>

    <div id="toolbar">
        <button id="blockButton" class="btn btn-danger">Block</button>
        <button id="unblockButton" class="btn btn-success">Unblock</button>
        <button id="deleteButton" class="btn btn-primary">Delete</button>
    </div>

    <script>
        $(document).ready(function () {
            $('#selectAll').change(function () {
                $('.userCheckbox').prop('checked', $(this).prop('checked'));
            });

            $('#blockButton').click(function () {
                var selectedUserIds = $('.userCheckbox:checked').map(function () {
                    return $(this).val();
                }).get();

                // Perform block action for selected users
            });

            $('#unblockButton').click(function () {
                var selectedUserIds = $('.userCheckbox:checked').map(function () {
                    return $(this).val();
                }).get();

                // Perform unblock action for selected users
            });

            $('#deleteButton').click(function () {
                var selectedUserIds = $('.userCheckbox:checked').map(function () {
                    return $(this).val();
                }).get();

                // Perform delete action for selected users
            });
        });
    </script>
</div>
